<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controllers.OpeningSceneController">
  <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
     <children>
      <Label layoutX="14.0" layoutY="14.0" text="Doctor Me:  A text based game." />
      <TextField layoutX="220.0" layoutY="245.0" onAction="#enableStartGameButton" onMouseEntered="#enableStartGameButton" promptText="Enter your name here" VBox.vgrow="NEVER">
            <VBox.margin>
               <Insets bottom="15.0" left="220.0" right="220.0" top="15.0" />
            </VBox.margin>
            <padding>
               <Insets left="5.0" right="5.0" />
            </padding></TextField>
      <Button fx:id="startGameButton" alignment="CENTER" disable="true" layoutX="209.0" layoutY="294.0" mnemonicParsing="false" onAction="#changeToMenuSceneButtonPushed" text="Start Game" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
   </children>
  </VBox>
</AnchorPane>
